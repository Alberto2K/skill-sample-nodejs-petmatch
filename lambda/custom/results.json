    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "direction": "column",
                "width": "100vw",
                "height": "100vh",
                "items": [
                    {
                        "type": "Frame",
                        "width": "100vw",
                        "height": "100vh",
                        "position": "absolute",
                        "backgroundColor": "@myBlue"
                    },
                    {
                        "type": "Canopy"
                    },
                    {
                        "type": "Container",
                        "direction": "column",
                        "width": "100vw",
                        "height": "60vh",
                        "alignItems": "center",
                        "items": [
                            {
                                "when": "${payload.petMatchData.properties.error == ''}",
                                "type": "Text",
                                "text": "${payload.petMatchData.properties.dog}",
                                "fontSize": "10vw",
                                "fontWeight": 700,
                                "color": "@myYellow",
                                "paddingTop": "8vh"
                            },
                            {
                                "when": "${payload.petMatchData.properties.error != ''}",
                                "type": "Text",
                                "text": "Oops!",
                                "fontSize": "10vw",
                                "fontWeight": 700,
                                "color": "@myYellow",
                                "paddingTop": "8vh"
                            },
                            {
                                "when": "${payload.petMatchData.properties.error == ''}",
                                "type": "Text",
                                "width": "80vw",
                                "textAlign": "center",
                                "text": "Size: <i>${payload.petMatchData.properties.size}</i> <br> Temperament: <i>${payload.petMatchData.properties.temperament}</i> <br> Energy: <i>${payload.petMatchData.properties.energy}</i>",
                                "fontSize": "4vw"
                            },
                            {
                                "when": "${payload.petMatchData.properties.error != ''}",
                                "type": "Text",
                                "text": "${payload.petMatchData.properties.error}",
                                "fontSize": "4vw"
                            }
                        ]
                    }
                ]
            }
        ]
    }
